				<!-- <t t-foreach="docs" t-as="o">
					<t t-set="o" t-value="o.with_context(lang=o.lang)" /> -->
					<div class="page" style="font-size=8pt;">
						<div class="row">
							<div class="col-12">
								<table class="table table-sm table-borderless">
									<tr>
										<td>
											<strong>
												Partner:
												<span t-esc="o.display_name" />
											</strong>
											<br />
											<span>
												<span t-esc="o._display_address()"></span>
												<!-- <span t-esc="o.street" /> , <span t-esc="o.street2" /> , 
													<span t-esc="o.city" /> <span t-esc="o.state_id.name" /> - <span t-esc="o.zip" 
													/> , <span t-esc="o.country_id.name" /> -->
											</span>
											<br />
											<span>
												<strong>Tel:</strong>
												<t t-esc="o.phone" />

												<strong>Fax:</strong>
												<span t-esc="o.fax" />

											</span>
										</td>
										<td class="text-right">
											<span>
												<strong>Date:</strong>
											</span>
											<br />
											<span>
												<strong>Tax Office :</strong>
											</span>
											<br />
											<span>
												<strong>VAT :</strong>
											</span>
											<br />
										</td>
										<td>
											<span
												t-esc="datetime.datetime.strptime(context_timestamp(datetime.datetime.now()).strftime('%d/%m/%y %H:%M'),'%d/%m/%y %H:%M')"
												t-options="{'widget': 'date'}" />
											<br />
											<span t-esc="o.x_vergidairesi" />
											<br />
											<span t-esc="o.vat" />
											<br />
										</td>
									</tr>
								</table>

							</div>
						</div>
						<div class="row">
							<div class="col-12">
								<table class="table table-bordered">
									<tr>
										<th>NO</th>
										<th>Number</th>
										<th>Date</th>
										<th>Due Date</th>
										<th>Explanation</th>
										<th>Debit</th>
										<th>Credit</th>
										<th>Balance</th>
										<th></th>
									</tr>
									<t t-set="number_lang" t-value="env['res.lang']._lang_get(user.lang)"/>
									<t t-if="o.use_secondary_currency">
										<t t-foreach="o._get_statement_data_currency()"
											t-as="s_dict">
											<t t-set="sblc" t-value="0" />
											<t t-set="sdc" t-value="'C'" />
											<t t-foreach="s_dict_value" t-as="s">
												<tr style="line-height:%80">
													<td style="padding:0">
														<span t-esc="s['seq']" />
													</td>
													<td style="padding:0;">
														<span t-esc="s['number']" />
													</td>
													<td style="padding:0;">
														<span t-esc="s['date']" />
													</td>
													<td style="padding:0;">
														<span t-esc="s['due_date']" />
													</td>
													<td style="padding:0;">
														<span t-esc="s['description']" />
													</td>
													<td  class="text-right" style="padding:0;">
														<span  t-esc="s['debit']"
															t-options='{"widget": "monetary", "display_currency":s["currency_id"]}' />
													</td>
													<td class="text-right"  style="padding:0;">
														<span   t-esc="s['credit']"
															t-options='{"widget": "monetary", "display_currency": s["currency_id"]}' />
													</td>
													<td class="text-right"  style="padding:0;">
														<span  t-esc="s['balance']"
															t-options='{"widget": "monetary", "display_currency": s["currency_id"]}' />
													</td>
													<td class="text-right" style="padding:0;">
														<span t-esc="s['dc']" />
													</td>
													<t t-value="s['dc']" t-set="sdc" />
													<t t-value="s['balance']" t-set="sblc" />
												</tr>
											</t>
											<tr>
												<td style="padding:0;"></td>
												<td style="padding:0;"></td>
												<td style="padding:0;"></td>
												<td style="padding:0;"></td>
												<td style="padding:0;"></td>
												<td style="padding:0;">Total</td>
												<td style="padding:0;"></td>
												<td class="text-right" style="padding:0;">
													<span t-esc="sblc"
														t-options='{"widget": "monetary", "display_currency":s_dict}' />
												</td>
												<td class="text-right" style="padding:0;">
													<span t-esc="sdc" />
												</td>
											</tr>
										</t>
									</t>
									<t t-else="">
										<t t-set="sblc" t-value="0" />
										<t t-set="sdc" t-value="'A'" />
										<t t-foreach="o._get_statement_data()" t-as="s">
											<tr style="line-height:%80">
												<td style="padding:0">
													<span t-esc="s['seq']" />
												</td>
												<td style="padding:0;">
													<span t-esc="s['number']" />
												</td>
												<td style="padding:0;">
													<span t-esc="s['date']" />
												</td>
												<td style="padding:0;">
													<span t-esc="s['due_date']" />
												</td>
												<td style="padding:0;">
													<span t-esc="s['description']" />
												</td>
												<td class="text-right" style="padding:0;">
													<span t-raw="number_lang.format('%.2f', s['debit'],grouping=True, monetary=True)"
													 />
												</td>
												<td class="text-right" style="padding:0;">
													<span t-raw="number_lang.format('%.2f', s['credit'],grouping=True, monetary=True)"
													 />
												</td>
												<td class="text-right" style="padding:0;">
													<span t-raw="number_lang.format('%.2f', s['balance'],grouping=True, monetary=True)"
													 />
													<!-- t-options='{"widget": "monetary", "display_currency": None}' -->
												</td>
												<td class="text-right" style="padding:0;">
														<span t-esc="s['dc']" />
													</td>
												<t t-value="s['dc']" t-set="sdc" />
												<t t-value="'%.2f' %s['balance']" t-set="sblc" />
											</tr>
										</t>
										<tr>
											<td style="padding:0;"></td>
											<td style="padding:0;"></td>
											<td style="padding:0;"></td>
											<td style="padding:0;"></td>
											<td style="padding:0;"></td>
											<td style="padding:0;">Total</td>
											<td style="padding:0;"></td>
											<td class="text-right" style="padding:0;">
												<span t-esc="'%,.2f'.format(sblc) "
												 />
											</td>
											<td class="text-right" style="padding:0;">
												<span t-esc="sdc" />
											</td>
										</tr>
									</t>
								</table>
							</div>
						</div>
					</div>
	</template>
	<template
		id="altinkaya_reports.report_partner_statement"
		priority="151">
		<t t-call="web.html_container">
			<t t-call="web.basic_layout">
				<t t-foreach="docs" t-as="o">
					<t
						t-call="altinkaya_reports.report_partner_statement_document"
						t-lang="o.lang" />
				</t>
			</t>
		</t>
	</template>
</odoo>
